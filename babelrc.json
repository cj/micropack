{
  "presets": ["es2015", "es2017", "stage-0"],
  "plugins": [
    "external-helpers",
    "add-module-exports",
    "array-includes",
    "transform-runtime",
    "transform-object-assign",
    "transform-decorators-legacy",
    "transform-imports"
  ],
  "env": {
    "test": {
      "auxiliaryCommentBefore": "istanbul ignore next",
      "plugins": [
        ["istanbul", {
          "exclude": ["**/*.spec.(js|vue)", "**/_specs"],
          "include": ["src/**/*.js"]
        }]
      ]
    }
  }
}
